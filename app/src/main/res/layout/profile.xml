<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1">
    <!--android:background="@android:color/background_dark"-->

    <Button
        android:id="@+id/profilBearbeiten"
        android:layout_width="184dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="Profil bearbeiten"
        android:layout_weight="0.01"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <EditText
        android:id="@+id/editText"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Benutzername"
        android:textAlignment="center"
        android:textSize="30sp"
        android:layout_alignBottom="@+id/textView3"
        android:layout_alignParentStart="true"
        android:layout_marginBottom="30dp" />

    <ImageButton
        android:id="@+id/imageButton"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_weight="0.13"
        app:srcCompat="@android:drawable/alert_light_frame"
        android:layout_above="@+id/editText"
        android:layout_alignParentEnd="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/textView3"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0.01"
        android:text="Status"
        android:textSize="24sp"
        android:layout_marginBottom="16dp"
        android:layout_above="@+id/city_picture"
        android:layout_alignParentStart="true" />


    <ImageView
        android:id="@+id/city_picture"
        android:layout_width="70dp"
        android:layout_height="70dp"
        android:layout_centerVertical="true"
        android:layout_alignParentStart="true" />

    <TextView
        android:id="@+id/contact_type"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Venedig"
        android:textAlignment="center"
        android:textSize="24sp"
        android:layout_centerVertical="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/alleReisenlöschen"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:text="Alle Reisen löschen"
        android:layout_below="@+id/city_picture"
        android:layout_alignParentStart="true"
        android:layout_marginTop="33dp" />

    <android.support.design.widget.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        app:menu="@menu/bottom_navigation"/>

    <FrameLayout
        android:id="@+id/main_frame"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_above="@+id/bottom_navigation"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">



    </FrameLayout>


    <!--android:background="?android:attr/windowBackground"-->




</RelativeLayout>
