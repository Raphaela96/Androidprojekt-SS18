<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    android:background="@color/AntiqueWhite">
    >

    <Button
        android:id="@+id/fertig"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/fertig"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/titelbild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/alert_light_frame"
        android:layout_weight="0.16"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/fertig"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/editprofilepicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profilbild bearbeiten"
        android:layout_weight="0.05"
        android:layout_below="@+id/titelbild"
        android:layout_alignParentStart="true" />


    <EditText
        android:id="@+id/editText2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText3"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Status" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editprofilepicture"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Benutzername" />

</RelativeLayout>
