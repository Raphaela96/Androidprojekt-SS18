<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:weightSum="1"
    >

    <Button
        android:id="@+id/fertig"
        android:layout_width="170dp"
        android:layout_height="wrap_content"
        android:layout_gravity="right"
        android:text="@string/fertig"
        android:layout_alignParentTop="true"
        android:layout_alignParentEnd="true" />

    <ImageButton
        android:id="@+id/titelbild"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:srcCompat="@android:drawable/alert_light_frame"
        android:layout_weight="0.16"
        android:layout_marginTop="28dp"
        android:layout_below="@+id/fertig"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/editprofilepicture"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Profilbild bearbeiten"
        android:layout_weight="0.05"
        android:layout_below="@+id/titelbild"
        android:layout_alignParentStart="true" />


    <EditText
        android:id="@+id/editText2"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editText3"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Status" />

    <EditText
        android:id="@+id/editText3"
        android:layout_width="150dp"
        android:layout_height="wrap_content"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/editprofilepicture"
        android:layout_marginTop="18dp"
        android:ems="10"
        android:inputType="textPersonName"
        android:hint="Benutzername" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="TextView"
        android:layout_toStartOf="@+id/fertig"
        android:layout_marginEnd="17dp" />

    <Button
        android:id="@+id/benutzernameÄndern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_alignTop="@+id/editText3"
        android:text="speichern" />

    <Button
        android:id="@+id/statusÄndern"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignStart="@+id/benutzernameÄndern"
        android:layout_below="@+id/benutzernameÄndern"
        android:text="speichern" />

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/statusÄndern"
        android:layout_marginTop="66dp"
        android:layout_toStartOf="@+id/fertig"
        android:text="TextView" />

</RelativeLayout>
